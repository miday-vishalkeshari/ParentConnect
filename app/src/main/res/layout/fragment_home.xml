                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/contact_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewcontactschool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Contact"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Library -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewHolidays"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/holidays"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewholidays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Holidays"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Attendance -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSchoolGalary"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/schoolgalary_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewschooolgalary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="School Galary"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notice Board -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewReportCard"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/reportcard_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewreportcard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Report card"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bus Tracking -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPtm"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"

                        android:src="@drawable/ptm_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewptm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="PTM"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Assignments -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTeachers"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"

                        android:src="@drawable/teachers_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Teachers"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Exams -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewNotifications"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/notifications_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewnotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Notifications"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fees -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMessages"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onCardViewClick">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"

                        android:src="@drawable/messages1_icon"
                        android:contentDescription="School Logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/textViewmessages"
