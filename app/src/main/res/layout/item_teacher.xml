<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:padding="16dp">

    <!-- LinearLayout inside CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Teacher's Name -->
        <TextView
            android:id="@+id/textschedulePeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Period no"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Class -->
        <TextView
            android:id="@+id/textClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <!-- Subject -->
        <TextView
            android:id="@+id/textSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <!-- Class -->
        <TextView
            android:id="@+id/textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name_teacher_or_student"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:visibility="visible"/>

        <!-- Subject -->
        <TextView
            android:id="@+id/textPersonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Id"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:visibility="visible"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
