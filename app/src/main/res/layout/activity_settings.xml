<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <!-- Wrapper LinearLayout inside ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Section for Profile Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/person_icon" />

                <!-- Username Text -->
                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UsernameId"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>



                <!-- Mobile Number -->
                <TextView
                    android:id="@+id/mobileNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number: 123-456-7890"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

                <!-- Email Address -->
                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: example@example.com"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <!-- Address -->
                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: 1234 Street, City, Country"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Section for Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Settings Title -->
                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- General Notification Switch -->
                <Switch
                    android:id="@+id/notificationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- Noticeboard Notification Switch -->
                <Switch
                    android:id="@+id/noticeboardSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noticeboard Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- Message Notification Switch -->
                <Switch
                    android:id="@+id/messageSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- Attendance Notification Switch -->
                <Switch
                    android:id="@+id/attendanceSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- PTM Notification Switch -->
                <Switch
                    android:id="@+id/ptmSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PTM Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- Fee Reminder Notification Switch -->
                <Switch
                    android:id="@+id/feeReminderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fee Reminder Notifications"
                    android:layout_marginBottom="20dp" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Settings"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</android.widget.ScrollView>
