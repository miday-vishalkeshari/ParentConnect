<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CardView for Ward Selector Spinner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wardCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/wardSelectorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/wards_array"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Class Selector Spinner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/classCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/wardCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/classSelectorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/classes_array"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Student Selector Spinner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/studentCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/classCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/studentSelectorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/students_array"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView for Report Card -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportCardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/studentCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/purple_light"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Floating Action Button for Adding Exam PDF -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addExamPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="add_exam_pdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

    <!-- ProgressBar for loading -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
