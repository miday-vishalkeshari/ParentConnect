<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- School Name -->
        <TextView
            android:id="@+id/schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Name"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="8dp" />

        <!-- School Address -->
        <TextView
            android:id="@+id/schoolAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Address"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Principal Contact Section -->
        <TextView
            android:id="@+id/principalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principal"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:textStyle="bold" />

        <!-- Principal Phone -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon" />
            <TextView
                android:id="@+id/principalPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Principal Email -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_icon" />
            <TextView
                android:id="@+id/principalEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Fees Section -->
        <TextView
            android:id="@+id/feesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee Section"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <!-- Fee Phone -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon" />
            <TextView
                android:id="@+id/feesPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Fee Email -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_icon" />
            <TextView
                android:id="@+id/feesEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- General Contact Section -->
        <TextView
            android:id="@+id/generalContactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Contact"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <!-- General Phone -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon" />
            <TextView
                android:id="@+id/schoolPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- General Email -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_icon" />
            <TextView
                android:id="@+id/schoolEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
